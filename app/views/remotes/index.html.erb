<p id="notice"><%= notice %></p>

<h1>Remotes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Brand</th>
      <th>Model</th>
      <th>Supported devices</th>
      <th>Bits</th>
      <th>Flags</th>
      <th>Include</th>
      <th>Manual sort</th>
      <th>Suppress repeat</th>
      <th>Driver</th>
      <th>Eps</th>
      <th>Aeps</th>
      <th>Header</th>
      <th>Zero</th>
      <th>One</th>
      <th>Two</th>
      <th>Three</th>
      <th>Ptrail</th>
      <th>Plead</th>
      <th>Foot</th>
      <th>Repeat</th>
      <th>Pre data bits</th>
      <th>Pre data</th>
      <th>Post data bits</th>
      <th>Post data</th>
      <th>Pre</th>
      <th>Post</th>
      <th>Gap</th>
      <th>Repeat gap</th>
      <th>Min repeat</th>
      <th>Toggle bit</th>
      <th>Toggle bit mask</th>
      <th>Repeat mask</th>
      <th>Frequency</th>
      <th>Duty cycle</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @remotes.each do |remote| %>
      <tr>
        <td><%= remote.name %></td>
        <td><%= remote.brand.name %></td>
        <td><%= remote.model %></td>
        <td><%= remote.supported_devices %></td>
        <td><%= remote.bits %></td>
        <td><%= remote.flags %></td>
        <td><%= remote.include %></td>
        <td><%= remote.manual_sort %></td>
        <td><%= remote.suppress_repeat %></td>
        <td><%= remote.driver %></td>
        <td><%= remote.eps %></td>
        <td><%= remote.aeps %></td>
        <td><%= remote.header %></td>
        <td><%= remote.zero %></td>
        <td><%= remote.one %></td>
        <td><%= remote.two %></td>
        <td><%= remote.three %></td>
        <td><%= remote.ptrail %></td>
        <td><%= remote.plead %></td>
        <td><%= remote.foot %></td>
        <td><%= remote.repeat %></td>
        <td><%= remote.pre_data_bits %></td>
        <td><%= remote.pre_data %></td>
        <td><%= remote.post_data_bits %></td>
        <td><%= remote.post_data %></td>
        <td><%= remote.pre %></td>
        <td><%= remote.post %></td>
        <td><%= remote.gap %></td>
        <td><%= remote.repeat_gap %></td>
        <td><%= remote.min_repeat %></td>
        <td><%= remote.toggle_bit %></td>
        <td><%= remote.toggle_bit_mask %></td>
        <td><%= remote.repeat_mask %></td>
        <td><%= remote.frequency %></td>
        <td><%= remote.duty_cycle %></td>
        <td><%= link_to 'Show', remote %></td>
        <td><%= link_to 'Edit', edit_remote_path(remote) %></td>
        <td><%= link_to 'Destroy', remote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

