<%= form_with(model: remote, local: true) do |f| %>
  <% if remote.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(remote.errors.count, "error") %> prohibited this remote from being saved:</h2>

      <ul>
      <% remote.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
