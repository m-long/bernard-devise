          <%= f.collection_check_boxes :device_model_ids,
            @device_models, :id, :name, {}, {} do |c|%>
            <div class="col-sm-6">
              <%= 
                c.label(class: 'checkbox') { 
                  c.check_box + " #{c.text} (#{c.object.brand.name})" 
