<%= form_with(model: device_model, local: true) do |f| %>
  <% if device_model.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(device_model.errors.count, "error") %> prohibited this device_model from being saved:</h2>

      <ul>
      <% device_model.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, id: :device_model_name %>
  </div>

  <div class="field">
    <%= f.label :device_brand_id %>
    <%= f.select :device_brand_id, 
      @device_brands.collect { |b| [ b.name, b.id ] }, 
      { include_blank: false }, { class: 'form-control' } %>
  </div>

  <div class="field">
    <%= f.label :device_type_id, "Device type" %>
    <%= f.select :device_type_id, 
    @device_types.collect { |t| [ t.name, t.id ] }, 
    { include_blank: false }, { class: 'form-control' } %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
